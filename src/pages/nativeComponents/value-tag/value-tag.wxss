/* colors */
.value-selector {
  display: flex;
  width: 100%;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: flex-start;
  margin: 5rpx -20rpx 5rpx 0;
}
.value-selector .value-selector-item {
  flex: 1 1 1;
  display: column;
  display: flex;
  justify-content: flex-start;
  flex-direction: column;
}
.value-selector .value-selector-item text,
.value-selector .value-selector-item switch {
  flex: 1;
  display: block;
  text-align: center;
}
.value-label {
  font-size: 0.6rem;
  margin: 0;
  color: #888888;
  display: block;
  white-space: nowrap;
  margin: 0 1rem 0 1rem;
}
.value-tag {
  position: relative;
  font-size: 0.8rem;
  color: #888888;
  white-space: nowrap;
  border: 1rpx solid #D0D0D0;
  background-color: white;
  height: 60rpx;
  min-width: 30rpx;
  border-radius: 30rpx;
  padding: 0 30rpx 0 30rpx;
  display: flex;
  justify-content: center;
  align-content: center;
  margin: 5rpx;
}
.value-tag text {
  display: inline-block;
  vertical-align: middle;
  line-height: normal;
  margin: auto;
}
.value-tag.checked {
  background-color: #FFCC00;
  border-color: #FFCC00;
}

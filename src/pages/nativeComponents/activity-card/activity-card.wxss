/* colors */
.activity-card {
  position: relative;
  flex: 0 0 200rpx;
  margin-bottom: 30rpx;
  border: 1px solid #ccc;
  box-shadow: 2px 2px 6px 0px rgba(0, 0, 0, 0.3);
}
.activity-card .shrink {
  zoom: 0.8;
  transform: scale(0.8);
  transform-origin: top left;
}
.activity-card .favorite {
  position: absolute;
  padding: 20rpx;
  top: 0;
  right: 0;
}
.activity-card .favorite image {
  color: white;
  width: 40rpx;
  height: 40rpx;
}
.activity-card .activity-info {
  max-width: 350rpx;
}
.activity-card .activity-avatar {
  height: 360rpx;
  width: 100%;
}
.activity-card .activity-content {
  margin-left: 10rpx;
  display: flex;
  padding: 20rpx 10rpx;
  flex-direction: column;
}
.activity-card .activity-content text {
  margin-bottom: 2rpx;
}
.activity-card .activity-content .star {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
}
.activity-card .activity-content .star image {
  width: 1rem;
  height: 1rem;
}
.activity-card .activity-info {
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
  display: block;
}
